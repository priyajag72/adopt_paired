<%= form_tag '/shelters' do %> <!--This assumes that a POST path will exist and provides security-->
  <p>Enter a new shelter:</p>
  <%= label_tag :name %>
  <%= text_field_tag :name %>
  <%= label_tag :addres %>
  <%= text_field_tag :address %>
  <%= label_tag :city %>
  <%= text_field_tag :city %>
  <%= label_tag :state %>
  <%= text_field_tag :state %>
  <%= label_tag :zip %>
  <%= text_field_tag :zip %>

  <%= submit_tag 'Create Shelter' %>
<% end %>
