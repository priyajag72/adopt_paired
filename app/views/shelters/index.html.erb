<h2>Shelters in the Denver Area</h2>
<% @shelters.each do |shelter| %>
  <h3><a href="/shelters/<%= shelter.id %>"><%= shelter.name %></a></h3>
  <%= link_to "Edit Shelter", "/shelters/#{shelter.id}/edit", method: :get %>
  <%= link_to "Delete Shelter", "/shelters/#{shelter.id}", method: :delete %>
<% end %>

<footer class="navbar navbar-dark bg-dark">
  <h4><%= link_to 'New Shelter', '/shelters/new' %></h4>
</footer>
