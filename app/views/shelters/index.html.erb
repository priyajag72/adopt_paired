<h2>Shelters in the Denver Area</h2>
<% @shelters.each do |shelter| %>
    <div class="col-sm-6">
      <div class="card">
        <div class="card-body">
          <h3 class="card-title"><a href="/shelters/<%= shelter.id %>"><%= shelter.name %></a></h3>
          <p class="card-text"> <%= shelter.address %></p>
          <%= link_to "Edit Shelter", "/shelters/#{shelter.id}/edit", method: :get, class:"btn btn-primary" %>
          <%= link_to "Delete Shelter", "/shelters/#{shelter.id}", method: :delete, class:"btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
<% end %>


<footer class="navbar navbar-dark bg-dark text-center">
  <h4><%= link_to 'New Shelter', '/shelters/new' %></h4>
</footer>
