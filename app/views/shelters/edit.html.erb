<%= form_tag "/shelters/#{@shelters.id}", method: 'patch' do %>
  <p>Edit information about the shelter:</p>
  <%= label_tag :name %>
  <%= text_field_tag :name, @shelters.name %>
  <%= label_tag :addres %>
  <%= text_field_tag :address, @shelters.address %>
  <%= label_tag :city %>
  <%= text_field_tag :city, @shelters.city %>
  <%= label_tag :state %>
  <%= text_field_tag :state, @shelters.state %>
  <%= label_tag :zip %>
  <%= text_field_tag :zip, @shelters.zip %>

  <%= submit_tag 'Submit your Edits' %>
<% end %>
